EXTENSION = pg_popyramids_ods
EXTVERSION = $(shell grep default_version $(EXTENSION).control | sed -e "s/default_version[[:space:]]*=[[:space:]]*'\([^']*\)'/\1/")

PG_CONFIG = pg_config
PG93 = $(shell $(PG_CONFIG) --version | egrep " 8\.| 9\.0| 9\.1| 9\.2" > /dev/null && echo no || echo yes)

ifeq ($(PG93),yes)
DOCS = $(wildcard doc/*.md)

all: sql/ods/$(EXTENSION)--$(EXTVERSION).sql

sql/ods/$(EXTENSION)--$(EXTVERSION).sql: sql/ods/types/*.sql sql/ods/tables/*.sql
	cat $^ > $@

DATA = $(wildcard updates/*--*.sql) sql/ods/$(EXTENSION)--$(EXTVERSION).sql
EXTRA_CLEAN = sql/ods/$(EXTENSION)--$(EXTVERSION).sql
else
$(error Minimum version of PostgreSQL required is 9.3.0)
endif


PGXS := $(shell $(PG_CONFIG) --pgxs)
include $(PGXS)
